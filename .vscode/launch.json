    "version": "0.2.0",
    "configurations": [              
        {
            "name": "launch chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}/torito",
            "url": "http://localhost:4200/"
        },
        {
            "command": "ng serve",
            "name": "Run ng serve",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/torito"
        },
    ],
    "compounds": [
        {
            "name": "Compound",
            "configurations": ["Run ng serve", "launch chrome"]
        }
    ]
    
}